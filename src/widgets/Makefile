all:
	mkdir -p include
	cd segmentbar && ${MAKE} lib
	cd grava && ${MAKE} lib
	cd grasm && ${MAKE} lib
	cd codew && ${MAKE} lib
	cd hexview && ${MAKE} lib
	cd listw && ${MAKE} lib
	cd grabin && ${MAKE} lib
	cd texttagview && ${MAKE} lib

clean:
	rm -f include/*
	cd segmentbar && ${MAKE} lib
	cd grava && ${MAKE} lib
	cd grasm && ${MAKE} lib
	cd codew && ${MAKE} lib
	cd hexview && ${MAKE} lib
	cd listw && ${MAKE} lib
	cd grabin && ${MAKE} lib
	cd texttagview && ${MAKE} lib
